---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    <pre><code id="code-content" class="language-{{ page.language }}"></code></pre>
  </article>
</div>

<script>
  fetch("{{ page.code_file }}")
    .then(function (r) {
      return r.text();
    })
    .then(function (code) {
      document.getElementById("code-content").textContent = code;
      hljs.highlightAll();
    });
</script>
